{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 60,
        "memory": 1024,
        "includeFiles": "node_modules/lighthouse/**"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "includeFiles": "node_modules/lighthouse/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/lighthouse/audit/stream",
      "dest": "/api/lighthouse.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    }
  ],
  "env": {
    "LIGHTHOUSE_LOCALE": "en-US",
    "LC_ALL": "C",
    "LANG": "en_US.UTF-8"
  }
}
